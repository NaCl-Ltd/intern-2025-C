<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_with url: users_path, method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :search, "ユーザー検索" %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "名前で検索" %>
    <%= submit_tag "検索", class: "btn btn-primary mt-2" %>
  </div>
<% end %>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
